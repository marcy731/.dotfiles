" --------------------------------
" common
" --------------------------------
set autoindent
set background=dark
set clipboard=unnamed
set encoding=utf-8
set expandtab
set hlsearch
set incsearch
set noswapfile
set number
set shiftwidth=2
set tabstop=2
set iskeyword+=\-
set nowrap
set ignorecase
set smartcase
set list
set wildmenu
set showcmd
set showmatch
set smarttab
set laststatus=2
set ruler
set cursorline
syntax on


" --------------------------------
" key mapping
" --------------------------------
let mapleader = "\<Space>"
map <C-c> <esc>
imap jj <ESC>
nmap ; :
nmap : ;
vmap : :
vmap : ;
nmap <leader>n :NERDTreeToggle<cr>
nmap <leader>f :Files<cr>
nmap <leader>t :tabe<CR>:terminal<CR><cr>
omap <Esc> <C-\><C-n>
omap jj <C-\><C-n>
